<% include partials/header %>

<div class="container" style="margin-top: 30px;">
  	<h1>Dettaglio utente: <span class="text-muted"><%= user.name %> <%= user.lastname %></span></h1>
  	<table class="table table-striped table-bordered" style="margin-top: 30px; ">
  		<thead class="thead-inverse">
    		<tr>
		      <th>#</th>
		      <th>Descrizione</th>
    		</tr>
  		</thead>
  	<tbody>
		    <tr>
		      <td>Data Registrazione</td>
		      <td><%= user.date %></td>
		    </tr>
		    <tr>
		      <td>Nome</td>
		      <td><%= user.name %></td>
		    </tr>
		    <tr>
    		  <td>Cognome</td>
		      <td><%= user.lastname %></td>
		    </tr>
		    <tr>
    		  <td>Email</td>
    		  <td><%= user.email %></td>
		    </tr>
		    <tr>
    		  <td>Website</td>
    		  <td><%= user.website %></td>
		    </tr>
		    <tr>
    		  <td>Telephone</td>
    		  <td><%= user.telephone %></td>
		    </tr>
		    <tr>
    		  <td>Address</td>
    		  <td><%= user.address %></td>
		    </tr>
		    <tr>
    		  <td>Partita IVA</td>
    		  <td><%= user.vatNumber %></td>
		    </tr>
		    <tr>
    		  <td>Password</td>
    		  <td><%= user.password %></td>
		    </tr>
		    <tr>
    		  <td>Active</td>
    		  <td><%= user.active %></td>
		    </tr>
  		</tbody>
	</table>

	
</div><!-- /.container -->

<div class="container" style="margin-top: 30px; margin-bottom: 30px;">
	<div class="row" style="margin-top: 30px; margin-bottom: 30px; justify-content: space-between;">
	        <div class="col-lg-6 "><button type="button" class="btn btn-lg btn-block btn-warning"><a href="/backoffice/users/<%= user._id %>/edit" style="color:#ffffff;">Modifica dati utente</a></button></div>
	        <div class="col-lg-6 "><button type="button" class="btn btn-lg btn-block btn-success"><a href="/backoffice/users" style="color:#ffffff;">Ritorna alla lista utenti</a></button></div>
	</div>
</div>


<% include partials/footer %>

