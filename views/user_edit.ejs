<% include partials/header-backoffice %>

<div class="container">

      <div class="starter-template">
        <h1>Modifica Utente: <span class="text-muted"><%= user.name %> <%= user.lastname %></span> </h1>
        <p class="lead">Utilizza il form sottostante per aggiornare il record utente.</p>
      </div>
		
		<form action="/users/ <%= user._id %>?_method=PUT" method="POST">
		<div class="form-group row">
		  <label for="example-text-input" class="col-2 col-form-label">Nome</label>
		  <div class="col-10">
		    <input class="form-control" type="text" value=" <%= user.name %> " name="jpp[name]">
		  </div>
		</div>
		<div class="form-group row">
		  <label for="example-search-input" class="col-2 col-form-label">Cognome</label>
		  <div class="col-10">
		    <input class="form-control" type="text" value=" <%= user.lastname %>"  name="jpp[lastname]">
		  </div>
		</div>
		<div class="form-group row">
		  <label for="example-email-input" class="col-2 col-form-label">Email</label>
		  <div class="col-10">
		    <input class="form-control" type="email" value=" <%= user.email %> " name="jpp[email]">
		  </div>
		</div>
		<div class="form-group row">
		  <label for="example-url-input" class="col-2 col-form-label">Website URL</label>
		  <div class="col-10">
		    <input class="form-control" type="url" value=" <%= user.website %> " name="jpp[website]">
		  </div>
		</div>
		<div class="form-group row">
		  <label for="example-tel-input" class="col-2 col-form-label">Telephone</label>
		  <div class="col-10">
		    <input class="form-control" type="tel" value=" <%= user.telephone %> " name="jpp[telephone]">
		  </div>
		</div>
		<div class="form-group row">
		  <label for="example-text-input" class="col-2 col-form-label">Indirizzo</label>
		  <div class="col-10">
		    <input class="form-control" type="text" value=" <%= user.address %> " name="jpp[address]">
		  </div>
		</div>
		<div class="form-group row">
		  <label for="example-date-input" class="col-2 col-form-label">Numero di Partita IVA</label>
		  <div class="col-10">
		    <input class="form-control" type="text" value=" <%= user.vatNumber %> " name="jpp[vatNumber]">
		  </div>
		</div>
		<div class="form-group row">
		  <label for="example-password-input" class="col-2 col-form-label">Password</label>
		  <div class="col-10">
		    <input class="form-control" type="password" value=" <%= user.password %> " name="jpp[password]">
		</div>
		
		<div class="col-lg-12" style="margin-top: 30px;">
			<input class="btn btn-lg btn-warning btn-block" type="submit">
	    </div>
		
		</form>

</div><!-- /.container -->

<div class="container">
	<div class="row" style="margin-top: 10px; margin-bottom: 50px;">
		<div class="col-lg-6">
			<form action="/users/<%= user._id %>?_method=DELETE" method="POST">
				<button class="btn btn-lg btn-block btn-danger">Cancella Utente</button>
	    	</form>
	    </div>
	    <div class="col-lg-6">
			<button type="button" class="btn btn-lg btn-success btn-block"><a href="/users" style="color:#ffffff;">Ritorna alla lista utenti</a></button>
	    </div>
	</div>
</div>




<% include partials/footer %>
